{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"rsg-components/*": [
				"src/packages/vue-styleguidist/client/rsg-components/*",
				"node_modules/react-styledguidist/lib/client/rsg-components/*"
			]
		},
		"strictFunctionTypes": false,
		"jsx": "preserve",
		"types": ["jest", "node", "htmlparser2", "buble"]
	},
	"include": ["packages/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules"]
}
